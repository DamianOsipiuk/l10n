{
    "name": "@lxg/l10n",
    "version": "1.0.6",
    "description": "A lightweight translation library",
    "main": "l10n",
    "scripts": {
        "lint": "for script in $(ls *.mjs | grep -v test.mjs); do npx eslint $script; done",
        "lint:fix": "for script in $(ls *.mjs | grep -v test.mjs); do npx eslint $script --fix; done",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "build": "for script in $(ls *.mjs | grep -v test.mjs | sed -e 's|.mjs||g'); do npx babel $script.mjs --presets=@babel/env > $script.js; npx eslint $script.js --fix; done"
    },
    "files": [
        "l10n.js",
        "l10n.mjs",
        "date.js",
        "date.mjs"
    ],
    "keywords": [
        "internationalisation",
        "i18n",
        "localization",
        "l10n",
        "translation",
        "translate",
        "localize",
        "gettext"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lxg/l10n.git"
    },
    "author": {
        "name": "Alexander GÃ¼nsche",
        "url": "https://lxg.de/"
    },
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.10.4",
        "@babel/core": "^7.10.4",
        "@babel/plugin-transform-modules-commonjs": "^7.10.4",
        "@babel/preset-env": "^7.10.4",
        "eslint": "^5.16.0",
        "eslint-plugin-jest": "^22.21.0",
        "jest": "^24.9.0"
    },
    "jest": {
        "testMatch": [
            "**/__tests__/**/*.?(m)js?(x)",
            "**/?(*.)(spec|test).?(m)js?(x)"
        ],
        "moduleFileExtensions": [
            "js",
            "mjs"
        ],
        "transform": {
            "^.+\\.m?js$": "babel-jest"
        }
    },
    "babel": {
        "env": {
            "test": {
                "presets": [
                    [
                        "@babel/env"
                    ]
                ],
                "plugins": [
                    [
                        "@babel/plugin-transform-modules-commonjs"
                    ]
                ]
            }
        }
    }
}
