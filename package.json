{
    "name": "@lxg/l10n",
    "version": "1.4.0",
    "description": "A lightweight translation library",
    "main": "l10n",
    "scripts": {
        "lint": "for script in $(ls *.mjs | grep -v test.mjs); do npx eslint $script; done",
        "lint:fix": "for script in $(ls *.mjs | grep -v test.mjs); do npx eslint $script --fix; done",
        "test": "jest",
        "test:coverage": "jest --coverage",
        "build": "for script in $(ls *.mjs | grep -v test.mjs | sed -e 's|.mjs||g'); do npx eslint $script.js --fix; done"
    },
    "files": [
        "l10n.mjs",
        "date.mjs"
    ],
    "keywords": [
        "internationalisation",
        "i18n",
        "localization",
        "l10n",
        "translation",
        "translate",
        "localize",
        "gettext"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lxg/l10n.git"
    },
    "author": {
        "name": "Alexander GÃ¼nsche",
        "url": "https://lxg.de/"
    },
    "license": "ISC",
    "devDependencies": {
        "eslint": "^7.26.0",
        "eslint-plugin-jest": "^24.3.6",
        "jest": "^26.6.3"
    },
    "jest": {
        "testMatch": [
            "**/__tests__/**/*.?mjs",
            "**/?(*.)(spec|test).?mjs"
        ],
        "moduleFileExtensions": [
            "js",
            "mjs"
        ]
    }
}
